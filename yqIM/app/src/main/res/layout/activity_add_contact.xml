<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.activity.AddContactActivity">
    <RelativeLayout
        android:layout_width="match_parent"
    android:background="@color/btn_blue_normal"
        android:layout_height="80sp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="添加联系人"
    android:textSize="40sp"
    android:textColor="@color/btn_white_normal"
    android:layout_centerInParent="true"
    />
<TextView
    android:id="@+id/tv_add_find"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:textColor="@color/btn_white_normal"
    android:layout_alignParentRight="true"
    android:gravity="center"
    android:textSize="30sp"
    android:layout_marginRight="10dp"
    android:text="查找"/>

    </RelativeLayout>
    <EditText
        android:id="@+id/et_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_add"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/add_photo"
            android:src="@drawable/ease_new_friends_icon"
            android:layout_width="50dp"
            android:layout_height="50dp" />
<TextView
    android:id="@+id/tv_add_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="30sp"
    android:text="名称"
    android:layout_toRightOf="@+id/add_photo"
    android:layout_marginLeft="10dp"
    android:layout_centerInParent="true"/>
<Button
    android:id="@+id/bt_add_add"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="添加"
    android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>